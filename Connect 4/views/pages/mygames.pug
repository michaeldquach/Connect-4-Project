// Page content
.main
  .container
    button#defaultOpen.tablink Active Games
    button.tablink Game History

    .tabcontent(id='Active Games')
      input#gameactiveInput.search-input(type='text' placeholder='Search usernames')
      table#activegameTable.myTable
        tr.header
          th Opponent
          th Status
          th Game Link

    .tabcontent(id='Game History')
      input#gamehistoryInput.search-input(type='text' placeholder='Search usernames')
      table#gamehistoryTable.myTable
        tr.header
          th Opponent
          th Outcome
          th Replay Link          

